{
  "name": "natours",
  "version": "1.0.0",
  "description": "Tours on nature website",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass ./sass/main.scss ./css/style.comp.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:css",
    "compile:sass": "node-sass ./sass/main.scss ./css/style.comp.css",
    "concat:css": "concat -o ./css/style.concat.css ./css/icon-font.css ./css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' ./css/style.concat.css -o ./css/style.prefix.css",
    "compress:scss": "node-sass ./css/style.prefix.css ./css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css compress:scss",
    "build": "npm-run-all compile:sass concat:css prefix:css compress:scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlosloureda/natours.git"
  },
  "keywords": [
    "html",
    "css",
    "js"
  ],
  "author": "Carlos Loureda <carloslouredaparrado@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/carlosloureda/natours/issues"
  },
  "homepage": "https://github.com/carlosloureda/natours#readme",
  "devDependencies": {
    "autoprefixer": "^10.2.3",
    "concat": "^1.0.3",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.1"
  }
}
